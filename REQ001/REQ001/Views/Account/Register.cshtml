@model REQ001.Models.AddUserViewModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <title>Registro</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Registro</div>
                    <div class="card-body">
                        <form asp-action="Register" enctype="multipart/form-data" class="mt-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">                                
                                <input asp-for="Username" class="form-control" placeholder="Nombre de Usuario" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">                               
                                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />                                
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Confirmar Contraseña" />
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>

                            <partial name="_User" />

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary d-flex justify-content-center mx-auto my-auto w-100" onclick ="mostrarSweetAlert2()">Registrar</button>
                                <hr />
                              
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts{
    <script>
        function mostrarSweetAlert2(){
            Swal.fire('Excelente','Registro agregado exitosamente','success');
        }
    </script>
}